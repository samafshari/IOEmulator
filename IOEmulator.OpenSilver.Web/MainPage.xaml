<UserControl xmlns="http://schemas.microsoft.com/client/2007"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Neat.UI.MainPage">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <StackPanel Orientation="Horizontal" Margin="8" Grid.Row="0">
      <TextBlock Text="Sample:" VerticalAlignment="Center" Margin="0,0,6,0"/>
      <ComboBox x:Name="SamplesCombo" Width="200" />
      <TextBlock Text="  Speed:" VerticalAlignment="Center" Margin="12,0,6,0"/>
      <ComboBox x:Name="SpeedCombo" Width="160" />
    </StackPanel>
    <Border Grid.Row="1" Background="Black" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
      <Image x:Name="VramImage" Stretch="Uniform"/>
    </Border>
  </Grid>
</UserControl>
